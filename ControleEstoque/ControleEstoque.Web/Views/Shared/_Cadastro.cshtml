@* - ESTA VISÃO VAI "_Cadastro.schtml" HERDAR DE LAYOUT ( Views --> Shared --> _Layout.cshtml <-- _Cadastro.cshtml ) - *@

@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    var lista = ViewBag.Lista;
    var titulo = ViewBag.Title;

    ViewBag.Title = "Cadastro de " + ViewBag.Title;
}

@* - NESTE LAYOUT HERDADO - VAMOS FICAR APENAS COM AQUILO QUE FOR DIFERENTE - *@

@RenderSection("Styles", true)
@RenderBody()

<div id="cadastro">
    <section id="cadastro_cabecalho">
        <h1>@ViewBag.Title</h1>
    </section>
    <section id="cadastro_conteudo">
        <div id="cabecalho_grid" class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-2">
                        <a id="btn_incluir" class="btn btn-success" role="button"><i class="glyphicon glyphicon-plus"></i> Incluir </a>
                    </div>
                    <div class="col-md-4">
                        @Html.DropDownList("ddl_tam_pag", (SelectList)ViewBag.ListaTamPag, new { @class = "selectpicker" })
                    </div>
                    <div class="col-md-6">
                        @Html.TextBox("txt_filtro", null, new { @class = "form-control", placeholder = "Digite o a Marca do produto..." })
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <table id="grid_cadastro" class="table table-bordered table-striped table-hover @Html.Raw( lista == null || lista.Count == 0 ? "invisivel" : "" )">
                    <thead>
                        <tr style="background-color: burlywood; font-size: 16px">
                            @RenderSection("TituloGrid", true)
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>

                <div id="mensagem_grid" @Html.Raw(lista != null && lista.Count > 0 ? "class=\"invisivel\"" : "")>
                    Não existem registros a serem exibidos nos @titulo
                </div>

            </div>
        </div>

        @if (ViewBag.QuantPaginas > 1)
        {
            <div class="row">
                <div class="col-md-12">
                    <nav>
                        <ul class="pagination">
                            <li class="page-item active"><a class="page-link" href="#">1</a></li>

                            @for (int i = 2; i <= ViewBag.QuantPaginas; i++)
                            {
                                <li class="page-item"><a class="page-link" href="#"> @i  </a></li>
                            }

                        </ul>
                    </nav>
                </div>
            </div>
        }
    </section>
</div>

@Html.Hidden("id_cadastro") @* - Este Campo será populado, quando fizermos uma ALTERAÇÂO... CHAMADO NO ABRIR_FORM  E NO CONFIRMAR *@

<div id="modal_cadastro" class="invisivel" role="dialog">
    <div id="msg_mensagem_aviso" class="text-danger invisivel"></div>
    <fieldset>
        @Html.AntiForgeryToken() @* - ESTA FUNÇÃO VAI GERAR O TOKEN DE AUTENTICAÇÃO... VALIDADO em CadastroController.cs [ValidateAntiForgeryToken]... *@
        @RenderSection("CamposCadastro", true)
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <div class="modal-footer">
                        <a id="btn_sair" class="btn btn-default" role="button" data-dismiss="modal"><i class="glyphicon glyphicon-remove"></i> Sair </a>
                        <a id="btn_confirmar" class="btn btn-primary" role="button"><i class="glyphicon glyphicon-ok"></i> Salvar </a>
                    </div>
                    <div id="msg_aviso" class="alert alert-warning invisivel"> Falta preencher os campos acima! </div>
                    <div id="msg_erro" class="alert alert-danger invisivel"> Algo Errado! </div>
                </div>
            </div>
        </div>
    </fieldset>
</div>

@*- Baixamos o bootbox.min.js do Javascript e arrastamos para junto dos Scripts e inserimos na Pasta App_Start no BundleConfig.cs *@
@section Scripts{
    <script src="~/Scripts/mustache.min.js"></script>
    <script src="~/Scripts/Cadastro/CadBase.js"></script>
    @RenderSection("Scripts", true)
}


