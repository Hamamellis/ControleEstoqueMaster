@model List<ControleEstoque.Web.Models.PerfilModel>

@{
    Layout = "~/Views/Shared/_Cadastro.cshtml";
    ViewBag.Title = "Grupo de Perfis de Usuários";
    ViewBag.Lista = Model;
}

<div class="row">
    <h2>
        <div class="rowperfisusuario">
            <div class="perfisimgusuario">
                <img src="~/img/perfis/admusuario.ico" alt="Adminstrativo" style="width:45%" />
            </div>
            <div class="perfisimgusuario">
                <img src="~/img/perfis/analistausuario.ico" alt="Analista" style="width:45%" />
            </div>
            <div class="perfisimgusuario">
                <img src="~/img/perfis/conferenteusuario.ico" alt="Conferente" style="width:45%" />
            </div>
            <div class="perfisimgusuario">
                <img src="~/img/perfis/coordusuario.ico" alt="Coordenador" style="width:45%" />
            </div>
            <div class="perfisimgusuario">
                <img src="~/img/perfis/operadorusuario.ico" alt="Operdaor" style="width:50%" />
            </div>
            <div class="perfisimgusuario">
                <img src="~/img/perfis/gerenteusuario.ico" alt="Gerente" style="width:45%" />
            </div>
            <div class="perfisimgusuario">
                <img src="~/img/perfis/outrosusuario.ico" alt="Outros Usuários" style="width:45%" />
            </div>
        </div>
    </h2>
</div>
<hr />

@* - ABAIXO - FIZEMOS O USO DE @RENDERSECTION E REFERENCIAMOS - *@

@section Styles{
    <link href="~/Content/bootstrap-select.css" rel="stylesheet" />
    <link href="~/Content/Cadastro/Perfil.css" rel="stylesheet" />

    <style>
        .dialogo > .modal-dialog {
            width: 700px !important;
        }

        .modal-body {
            height: 600px;
            overflow-y: scroll;
            background-color: antiquewhite;
        }
    </style>
}

@section TituloGrid{
    <th><span class="coluna-ordenacao" data-campo="nome">Nome:</span></th>
    <th><span class="coluna-ordenacao" data-campo="ativo">Ativo:</span></th>
    <th>Ação:</th>
}

@section CamposCadastro {
    <div class="row">
        <div class="col-md-12">
            @Html.Label("txt_nome", "Nome", new { @class = "control-label" })
            @Html.TextBox("txt_nome", null, new { @class = "form-control" })
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="form-check">
                @Html.Label("cbx_ativo", "Ativo", new { @class = "control-label" })
                @Html.CheckBox("cbx_ativo")
            </div>
        </div>
    </div>
    <div class="row" style="margin-top: 15px">
        <div class="form-group" style="margin: 0 10px 0 10px">
            <div class="col-md-12">
                <div class="panel panel-info">
                    <div class="panel-heading">Usuários:</div>
                    <div class="panel-body">
                        <div class="well" style="max-height: 300px; padding: 5px; margin: 0; overflow: auto">
                            <ul id="lista_usuario" class="list-group checked-list-box" style="margin-bottom: 0">
                                @foreach (var usuario in (List<ControleEstoque.Web.Models.UsuarioModel>)ViewBag.ListaUsuario)
                                {
                                    <li class="list-group-item">
                                        <label style="margin-bottom: 0; color: blue">
                                            <input type="checkbox" data-id-usuario="@usuario.Id" /> @usuario.Nome
                                        </label>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
}

@section Scripts{
    <script src="~/Scripts/bootstrap-select.js"></script>

    <script>
        var tituloPagina = '@ViewBag.Title';
        var url_excluir = url = '@Url.Action("ExcluirPerfil", "CadPerfil")';
        var url_confirmar = '@Url.Action("SalvarPerfil", "CadPerfil")';
        var url_page_click = '@Url.Action("PerfilPagina", "CadPerfil")';
        var url_tam_pag_change = '@Url.Action("PerfilPagina", "CadPerfil")';
        var url_filtro_change = '@Url.Action("PerfilPagina", "CadPerfil")';
        var url_alterar = '@Url.Action("RecuperarPerfil", "CadPerfil")';
        var linhas = [];

        @{
            var linha = 0;
            foreach (var item in Model)
            {
                linha++;
                if (linha <= ViewBag.QuantMaxLinhasPorPagina)
                {
                    @:linhas.push(@Html.Raw(Json.Encode(item)));
                }
                else
                {
                    break;
                }
            }
        }

    </script>
    <script id="template-grid" type="x-tmpl-mustache">
        <tr data-id="{{ Id }}">
            <td>{{ Nome }}</td>
            <td>{{ #Ativo }}SIM{{ /Ativo }}{{ ^Ativo }}NÃO{{ /Ativo }}</td>
            <td>
                <a class="btn btn-primary btn-alterar" role="button"><i class="glyphicon glyphicon-pencil"></i> Alterar</a>
                <a class="btn btn-danger btn-excluir" role="button"><i class="glyphicon glyphicon-trash"></i> Excluir</a>
            </td>
        </tr>
    </script>

    <script src="~/Scripts/Cadastro/Perfil.js"></script>
}
